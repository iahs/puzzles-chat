// Create a new Quiz
extends ../layout
block content
    h1 Group does not exist (yet)
    p There is no group at this url. Do you want to create a new one?
    | Enter a title and description here, then add members on the next page.
    form(role="form", method="POST", action="/admin/group/#{permalink}")
        .form-group
            label(for="name") Name
            input.form-control(name="name", id="name", value="#{permalink}", required)
        .form-group
            label(for="description") Description
            textarea.form-control(name="description", id="description", placeholder="Enter a description of the group here", required)
        input.btn.btn-primary(type="submit", value="Create")
